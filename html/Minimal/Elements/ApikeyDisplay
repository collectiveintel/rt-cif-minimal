<%init>
use CIF qw/generate_uuid_ns/;
use Digest::SHA1 qw/sha1_hex/;

my %group_map;
foreach (keys %groups){
    $group_map{generate_uuid_ns($_)} = $_;
}

my $r_map = {};
foreach my $x (@access_types){
    $r_map->{sha1_hex($x)} = $x;
}
</%init>

<%ARGS>
@recs   => undef
%groups => undef
@access_types => undef
</%ARGS>
